<div class="col-md-12">
    <div class="col-md-12">
        <h3><span class="fa fa-map-signs text-primary"></span> {{'text.route'|trans}}</h3>
        <hr>
        <div class="col-md-12">
            <div class="col-md-4">
                <p>{{'text.departureCity'|trans}}</p> 
            </div>
            <div class="col-md-8">
                <p><span class="glyphicon glyphicon-record text-primary"></span> RDV à {{ advert.departureCity }}</p>
            </div>                                     
        </div>
        <div class="col-md-12">
            <div class="col-md-4">
                <p>{{'text.cityOfArrival'|trans}}</p> 
            </div>
            <div class="col-md-8">
                <p><span class="glyphicon glyphicon-record text-danger"></span> {{ advert.cityOfArrival }}</p>
            </div>                                     
        </div>
        <div class="col-md-12">
            <div class="col-md-4">
                <p>{{'text.departureDate'|trans}}</p> 
            </div>
            <div class="col-md-8">
                <p><span class="glyphicon glyphicon-calendar text-primary"></span> {{ advert.departureDate.format('d/m/Y') }} à {{ advert.departureTime }}</p>
            </div>                                     
        </div>
        <div class="col-md-12">
            <div class="col-md-4">
                <p>{{'text.travelTime'|trans}}</p> 
            </div>
            <div class="col-md-8">
                <p>{{ advert.travelTime.format('h : m') }}</p>
            </div>                                     
        </div>
        <div class="col-md-12">
            <div class="col-md-4">
                <p>{{'text.numberOfPlace'|trans}}</p> 
            </div>
            <div class="col-md-8">
                <p>{{ advert.numberOfPlace }}</p>
            </div>                                     
        </div>
    </div>
</div>
<div class="col-md-12">
    <h3>{{advert.user.name}} {{advert.user.lastName}}</h3> 
    <p>infos sur le trajet</p> 
</div>