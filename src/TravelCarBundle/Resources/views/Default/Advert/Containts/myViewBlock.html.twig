  <div class="row">
    {% for advert in adverts %}
      <div class="col-md-3" >
        <div class="thumbnail">
            <div class="caption">
              <h3>
                  {% if advert.departureDate.format("d/m/Y") == 'now'| date("d/m/Y") %}

                      Aujourd'hui à {{ advert.departureTime }}

                  {% elseif advert.departureDate.format("d/m/Y") == date().modify('+1 day').format("d/m/Y") %}

                      Demain à {{ advert.departureTime}}

                  {% else %}    
                      {{ advert.departureDate|date('d/m/Y')}} à {{ advert.departureTime}}
                  {% endif %}
              </h3>
              <p><span class="glyphicon glyphicon-road text-primary"></span> {{ advert.departureCity }}  → {{ advert.cityOfArrival }}</p>
              
              
              {% if advert.departureDate > date("now") %}
                  <p><span class="glyphicon glyphicon-user text-primary"></span> {{ advert.numberOfPlace - advert.numberOfReservation }} places disponibles.</p>
                  <p><span class="glyphicon glyphicon-time text-primary"></span> Voyage à venir. </p>
              {% else %}
                  <p><span class="glyphicon glyphicon-user text-primary"></span>  {{ advert.numberOfReservation }} {% if advert.numberOfReservation<2 %} reservation {% else %} reservations {% endif %}.</p>
                  <p><span class="glyphicon glyphicon-ok text-success"></span> Voyage effectué.</p>
              {% endif %}
              <a href="{{path('view_advert', {'id': advert.id })}}" class="btn btn-warning" type="button"> Voir + <span class="glyphicon glyphicon-search"></span> </a>
              </div>
        </div>
      </div> 
    {% endfor %}
  </div>
      