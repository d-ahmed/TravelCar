{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vehicles list</h1>

    <table>
        <thead>
            <tr>
                <th>Idnumber</th>
                <th>Model</th>
                <th>Color</th>
                <th>Fuel</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicle in vehicles %}
            <tr>
                <td><a href="{{ path('vehicle_show', { 'id': vehicle.idNumber }) }}">{{ vehicle.idNumber }}</a></td>
                <td>{{ vehicle.model }}</td>
                <td>{{ vehicle.color }}</td>
                <td>{{ vehicle.fuel }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('vehicle_show', { 'id': vehicle.idNumber }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('vehicle_edit', { 'id': vehicle.idNumber }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vehicle_new') }}">Create a new vehicle</a>
        </li>
    </ul>
{% endblock %}
