{% extends '@FOSUser/layout.html.twig' %}
{% trans_default_domain 'TravelCarBundle' %}
{% block title %}{{ 'label.title.myVehicles'|trans }}{% endblock %}
{% block fos_user_content %}
    <h1>{{ 'label.vehicle.list'|trans }}</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>{{ 'label.vehicle.idNumber'|trans }}</th>
                <th>{{ 'label.vehicle.model'|trans }}</th>
                <th>{{ 'label.vehicle.color'|trans }}</th>
                <th>{{ 'label.vehicle.fuel'|trans }}</th>
                <th>{{ 'label.vehicle.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicle in vehicles %}
            <tr>
                <td><a href="{{ path('vehicle_show', { 'id': vehicle.idNumber }) }}">{{ vehicle.idNumber }}</a></td>
                <td>{{ vehicle.model }}</td>
                <td>{{ vehicle.color }}</td>
                <td>{{ vehicle.fuel }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('vehicle_show', { 'id': vehicle.idNumber }) }}">{{ 'label.show'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('vehicle_edit', { 'id': vehicle.idNumber }) }}">{{ 'label.edit'|trans }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('vehicle_new') }}">{{ 'label.vehicle.new'|trans }}</a>

{% endblock %}
