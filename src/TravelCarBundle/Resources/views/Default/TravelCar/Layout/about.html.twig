{%extends "::base.html.twig"%}
{%trans_default_domain 'TravelCarBundle'%}
{% block title %} {{'label.about'|trans}}  {% endblock %}

{% block header_heading %} {{'label.about'|trans}} {% endblock %}



{% block body %}



    <section id="services" >
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">{{ 'label.about_page.what_give_me_travelcar'|trans }}</h2>
                    <h3 class="section-subheading text-muted"><small>{{ 'label.about_page.start_now'|trans }}</small></h3>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-users fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">{{ 'label.about_page.meeting_people'|trans }}</h4>
                    <p class="text-muted">{{ 'label.about_page.meeting_desc'|trans }}</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-money fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">{{ 'label.about_page.saving_money'|trans }}</h4>
                    <p class="text-muted">{{ 'label.about_page.saving_desc'|trans }}</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-globe fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">{{ 'label.about_page.travelling'|trans }}</h4>
                    <p class="text-muted"> {{ 'label.about_page.travelling_desc'|trans }}</p>
                </div>
            </div>
            <br><br>
            <div class="row text-center">
                <h1> {{ 'label.about_page.something_to_tell_us'|trans }} </h1>
                <p> {{ 'label.about_page.sttu_desc1'|trans }}</p>
                <p> {{ 'label.about_page.sttu_desc2'|trans }}</p>
                <br><br>

            </div>
        </div>
    </section>

    <div class="panel col-md-6 col-md-offset-3">
        <form name="sentMessage" id="contactForm" novalidate>
            <div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
                    <label>{{ 'form.name' | trans }}</label>
                    <input type="text" class="form-control" placeholder="{{ 'form.name' | trans }}" id="name" required data-validation-required-message="Please enter your name.">
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
                    <label>{{ 'form.email' | trans }}</label>
                    <input type="email" class="form-control" placeholder="{{ 'form.email' | trans }}" id="email" required data-validation-required-message="Please enter your email address.">
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
                    <label>{{ 'form.phoneNumber' | trans }}</label>
                    <input type="tel" class="form-control" placeholder="{{ 'form.phoneNumber' | trans }}" id="phone" required data-validation-required-message="Please enter your phone number.">
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
                    <label>{{ 'form.message' | trans }}</label>
                    <textarea rows="5" class="form-control" placeholder="{{ 'form.message' | trans }}" id="message" required data-validation-required-message="Please enter a message."></textarea>
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <br>
            <div id="success"></div>
            <div class="row">
                <div class="form-group col-xs-12">
                    <button type="submit" class="btn btn-default">{{ 'label.presentation.send' | trans }}</button>
                </div>
            </div>
        </form>
    </div>



{% endblock %} 