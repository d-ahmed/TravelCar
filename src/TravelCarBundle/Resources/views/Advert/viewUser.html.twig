{% extends "base.html.twig" %}
{% trans_default_domain 'TravelCarBundle' %}

{% block title %} advert {% endblock %}
{% block header_heading %} {{ advert.departureCity }} - {{ advert.cityOfArrival }} {% endblock %}
{% block body %}
<div class="row">
    <div class="col-md-8">
        {% include 'TravelCarBundle:Advert:view.html.twig' %}
    </div>
    <div class="col-md-4">
        {% if app.user.id is defined and app.user.id != advert.user.id%}
            {% if advert.nbPlaces %}
                <div class="col-md-3">
                    {% include 'TravelCarBundle:Advert:reserver.html.twig' %}
                </div>

            {% else %}
                <small class="text-danger" > {{'text.complet'|trans}} </small>
            {% endif %}
        {% elseif app.user.id is not defined %}
            {% if advert.numberOfPlace %}
                <div class="col-md-3 pull-right">
                    {% include 'TravelCarBundle:Advert:reserver.html.twig' %}
                </div>

            {% else %}
                <small class="text-danger" > {{'text.complet'|trans}} </small>
            {% endif %}
        {% else %}
            <small class="text-danger" >{{'text.addedByYou'|trans}}</small>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts_layout %}
         <script type="text/javascript">
             $('document').ready(function(){
                 $('#comment').keypress(function(e){
                     if(e.keyCode == 13){
                        $('#comment').parent().submit();
                     }
                 })
             })       
         </script>
{% endblock %}

