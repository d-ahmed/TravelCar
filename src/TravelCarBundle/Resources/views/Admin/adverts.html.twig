{% extends '::baseAdmin.html.twig' %}
{% trans_default_domain 'TravelCarBundle' %}
{% block title %}{{ 'label.admin.users'|trans }}{% endblock %}
{% block body %}
    <h1>{{ 'label.admin.users'|trans }}</h1>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>{{ 'label.departureCity'|trans }}</th>
            <th>{{ 'label.cityOfArrival'|trans }}</th>
            <th>{{ 'label.departureDate'|trans }}</th>
            <th>{{ 'label.departureTime'|trans }}</th>
            <th>{{ 'label.pricePerPersonne'|trans }}</th>
            <th>{{ 'label.numberOfPlace'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% if adverts is not empty %}
            {% for advert in adverts %}
                <tr>
                    <td>{{ advert.departureCity }}</td>
                    <td>{{ advert.cityOfArrival }}</td>
                    <td>{{ advert.departureDate.format("d/m/Y") }}</td>
                    <td>{{ advert.departureTime|date('h:m') }}</td>
                    <td>{{ advert.pricePerPersonne }}</td>
                    <td>{{ advert.numberOfPlace }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_advert', {'id':advert.id}) }}">{{ 'label.show'|trans }}</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>

{% endblock %}