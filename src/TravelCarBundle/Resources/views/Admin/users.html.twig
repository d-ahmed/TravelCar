{% extends '::baseAdmin.html.twig' %}
{% trans_default_domain 'TravelCarBundle' %}
{% block title %}{{ 'label.presentation.users'|trans }}{% endblock %}
{% block body %}
    <h1>{{ 'label.presentation.users'|trans }}</h1>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>{{ 'form.prenom'|trans }}</th>
            <th>{{ 'form.nom'|trans }}</th>
            <th>{{ 'label.vehicle.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% if users is not empty %}
            {% for user in users %}
                {% if app.user.id != user.id %}
                <tr>
                    <td>{{ user.name }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('user_show', {'id':user.id}) }}">{{ 'label.show'|trans }}</a>
                            </li>
                        </ul>
                    </td>
                </tr>
                {% endif %}
            {% endfor %}
        {% endif %}
        </tbody>
    </table>

{% endblock %}