
{% trans_default_domain 'FOSUserBundle' %}
{% set target = app.request.headers.get('referer') %}

<div class="col-md-offset-4" >
    <small> {{'label.demande'|trans({}, 'TravelCarBundle') }}  <a class="btn btn-bg btn-social btn-default" href="{{ path('fos_user_registration_register') }}">{{'label.signUp'|trans({}, 'TravelCarBundle') }}</a></small>
</div>
        <div class="col-sm-6" style="border-right: solid; border-width: 0.5px">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}


            <form action="{{ path("fos_user_security_check") }}" method="post" class="form">
                
                <input type="hidden" name="_target_path" value="{{target}}" />
                
                {% if csrf_token %}
                    <input class="form-control" type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="form-group floating-label-form-group controls">
                    <label value="">{{ 'security.login.username'|trans }}</label>
                    <input type="text" class="form-control" placeholder="{{ 'security.login.username'|trans }}" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    <p class="help-block text-danger"></p>
                </div>

                <div class="form-group floating-label-form-group controls">
                    <label value="">{{ 'security.login.password'|trans }}</label>
                    <input class="form-control" placeholder="{{ 'security.login.password'|trans }}" type="password" id="password" name="_password" required="required" />
                </div>
                <div class="form-group" style="margin-top: 10px;">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <small><label for="remember_me">{{ 'security.login.remember_me'|trans }}</label></small>
                    <small class="pull-right"><a class="btn-social" href="#">{{'label.mdp_oublie'|trans({}, 'TravelCarBundlePersonne') }}</a></small>
                </div>

                    <button class="btn btn-info" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" ><small>{{'btn.connexion'|trans({}, 'TravelCarBundlePersonne') }}</small></button>

            </form>
        </div>
        <div class="col-sm-6" style="">
            
            <a href="#" class="button b facebook col-md-12 vcenter"><span><i class="fa fa-facebook"></i></span>{{'connexion.avec.fb'|trans({}, 'TravelCarBundlePersonne') }}</a>

            <a href="#" class="button b twitter col-md-12 vcenter"><span><i class="fa fa-twitter"></i></span>{{'connexion.avec.tw'|trans({}, 'TravelCarBundlePersonne') }}</a>

            <a href="#" class="button b google-plus col-md-12 vcenter"><span><i class="fa fa-google-plus"></i></span>{{'connexion.avec.go'|trans({}, 'TravelCarBundlePersonne') }}</a>
        </div>